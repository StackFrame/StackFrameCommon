<project name="sng" default="default" basedir=".">

  <property name="bin_dir" location="build"/>
  <path id="compile.class.path">
    <pathelement path="lib/javax.mail.jar" />
    <pathelement path="lib/guava-14.0-rc3.jar" />
  </path>

  <target name="default" description="Compile and build JAR." >

    <mkdir dir="${bin_dir}" />

    <javac srcdir="src" includes="com/**" destdir="${bin_dir}" source="1.6" debug="true">
      <classpath refid="compile.class.path" />
      <compilerarg value="-Xlint:all,-serial"/>
    </javac>

    <jar destfile="StackFrameCommon.jar" basedir="build"/>

  </target>

</project>
